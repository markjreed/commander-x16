SET.LINE.END:
   FOR I=0 TO -1 STEP 0
       GET# 4, X$
       C=ASC(X$)
       I=(C=13 OR C=10)
   NEXT I
   IF C=10 THEN LINE.ENDING = 10:RETURN
   LINE.ENDING=13
   GET# 4, X$
   IF X$=CHR$(10) THEN IS.WINDOWS.FILE=-1
   RETURN

POSITION:
  COMMAND$="P"+CHR$(CHANNEL)+CHR$(P0)+CHR$(P1)+CHR$(P2)+CHR$(P3)

DOS.CMD:
 OPEN 15,DEVICE,15, COMMAND$
 GOTO GETFCODE

GETFILECODE:
  OPEN 15,8,15
GETFCODE:
  INPUT#15,FCode,FC$,A,B:CLOSE 15:RETURN

FIXCURSOR:
  FBASE=$9F*8+$F000
  FOR X=0 TO 6:VPOKE 1,FBASE+X,0:NEXT X
  VPOKE 1,FBASE+7,$FF
  RETURN

CHECK.FOR.FILE:
  OB = PEEK(0)
  BANK 0
  WORKBANK = PEEK($BFFF)
  BANK WORKBANK
  SAddr=$BD00:GOSUB PEEK.STRING
  File.TCheck = (S$="LOADFILE:")
  IF File.TCheck THEN SAddr=$BD10:GOSUB PEEK.STRING:THEFILE$=S$
  SAddr = $BE00:GOSUB PEEK.STRING
  LOAD.RETURN = (S$="MYLOADER:")
  IF LOAD.RETURN THEN SAddr=$BE10:GOSUB PEEK.STRING:My.Loader$=S$
  BANK OB
  RETURN

PEEK.STRING:
 L=PEEK(SAddr):IF L=0 THEN S$="":RETURN
 S$=RPT$(32,L)
 ADDR=SAddr+1
 POKE 2, FN LO.Byte(ADDR)
 POKE 3, FN HI.Byte(ADDR)
 P=POINTER(S$)
 POKE 4, PEEK(P+1)
 POKE 5, PEEK(P+2)
 POKE 6, L
 POKE 7, 0
 SYS $FEE7
 RETURN

POKE.STRING:
 L=LEN(S$)
 Addr=SAddr+1
 POKE SAddr, L
 POKE R1L, FN LO.Byte(Addr)
 POKE R1H, FN HI.Byte(Addr)
 P=POINTER(S$)
 POKE R0L, PEEK(P+1)
 POKE R0H, PEEK(P+2)
 POKE R2L, L
 POKE R2H, 0
 SYS MEM.COPY
 RETURN

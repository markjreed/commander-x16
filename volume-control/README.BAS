SWAP.SCREEN.COLORS:
 CBYTE=VPEEK(1,$B001)
 LOW.NIBBLE = CBYTE AND $0F:BGROUND=LOW.NIBBLE
 HIGH.NIBBLE = (CBYTE AND $F0) / 16:FGROUND=HIGH.NIBBLE
 COLOR FGROUND, BGROUND
 CBYTE = (LOW.NIBBLE*16) + HIGH.NIBBLE
 POKE $9F20, $01
 POKE $9F21, $B0
 POKE $9F22,%00100001
 POKE R0L, $23
 POKE R0H, $9F
 POKE R1L, $80
 POKE R1H, $0E
 POKE A.REG, CBYTE
 SLEEP:SYS MEM.FILL
RETURN


#CONTROLCODES 1
BANK 0
WORKBANK = PEEK($BF01)
BANK WORKBANK
CURBANK=WORKBANK
SADDR = $A000
S$="COLOR 6,6"+CHR$(13)
GOSUB POKEIT
S$="CLS"+CHR$(13)
GOSUB POKEIT
S$="LOAD "+CHR$(34)+"VCONTROL.PRG"+CHR$(34)+CHR$(13)
GOSUB POKEIT
S$="BANNER:PRINT:PRINT"+CHR$(13)+CHR$(0)
GOSUB POKEIT
BANK WORKBANK
EXEC $A000
END

POKEIT:
 FOR I = 1 TO LEN(S$)
     C$ = MID$(S$,I,1)
     POKE SADDR, ASC(C$)
     SADDR=SADDR+1
     IF SADDR=$C000 THEN SADDR=$A000:CURBANK=CURBANK+1:BANK CURBANK
 NEXT
 RETURN
